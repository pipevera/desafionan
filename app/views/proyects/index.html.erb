<p id="notice"><%= notice %></p>

<h1>Proyects</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>People</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @proyects.each do |proyect| %>
      <tr>
        <td><%= proyect.name %></td>
        <td>
          <!-- <%= proyect.people.collect(&:name).join(',') %> -->
          <ul class="nav">
            <% proyect.people.each do |member| %>
              <li><%= member.name %><span class="badge info"><%= link_to 'X', delete_person_proyect_path(proyect, member) %></span></li>
            <% end %>
          </ul>
        </td>
        <td><%= link_to 'Show', proyect %></td>
        <td><%= link_to 'Edit', edit_proyect_path(proyect) %></td>
        <td><%= link_to 'Destroy', proyect, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

